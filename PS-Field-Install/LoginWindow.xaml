<Window x:Class="PS_Field_Install.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PS_Field_Install"
        mc:Ignorable="d"
        Title="Login" Height="167" Width="249">
    <Grid>
        <Border Margin="17,20,26,21">
            <Grid Margin="10,10,-10,-10">
                <PasswordBox x:Name="txtPassword" HorizontalAlignment="Left" Margin="58,23,0,0" VerticalAlignment="Top" Width="125"/>
                <TextBox x:Name="txtUsername" HorizontalAlignment="Left" Height="18" Margin="58,0,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="125"/>
                <TextBlock x:Name="textBlock" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Username" VerticalAlignment="Top" Height="18"/>
                <TextBlock x:Name="textBlock_Copy" HorizontalAlignment="Left" Margin="3,23,0,0" TextWrapping="Wrap" Text="Password" VerticalAlignment="Top" Height="18"/>
                <Button x:Name="btnLogin" Content="Login" Margin="12,55,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="75" Click="btnLogin_Click"/>
                <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Left" Margin="97,55,0,0" VerticalAlignment="Top" Width="75" Click="btnCancel_Click"/>

            </Grid>
        </Border>

    </Grid>
</Window>

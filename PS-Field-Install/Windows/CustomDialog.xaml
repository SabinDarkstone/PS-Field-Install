<Window x:Class="PS_Field_Install.CustomDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PS_Field_Install"
        mc:Ignorable="d"
        Title="CustomDialog" Height="187" Width="486">
    <Grid>
        <TextBlock x:Name="txtMessage" HorizontalAlignment="Left" Margin="87,22.05,0,0" TextWrapping="Wrap" Text="&lt;Message Text&gt;" Width="370" Height="59" VerticalAlignment="Top"/>
        <Image x:Name="picImage" HorizontalAlignment="Left" Height="59" Margin="13,22.05,0,0" VerticalAlignment="Top" Width="59" d:LayoutOverrides="VerticalAlignment"/>
        <TextBlock x:Name="txtError" Margin="87,92.05,21,0" TextWrapping="Wrap" Text="&lt;Error Code&gt;" TextAlignment="Right" VerticalAlignment="Top"/>
        <UniformGrid x:Name="grid" Height="20" Margin="161,0,162,17.99" VerticalAlignment="Bottom" d:LayoutOverrides="Width">
            <Button x:Name="btnOkay" Content="Okay" VerticalAlignment="Top" Height="20" Margin="0,0,2.5,-10" Width="75"/>
            <Button x:Name="btnCancel" Content="Cancel" VerticalAlignment="Top" Height="20" Margin="2.5,0,0,-10" Width="75"/>
        </UniformGrid>
    </Grid>
</Window>
